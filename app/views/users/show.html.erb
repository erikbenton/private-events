<h1>User Events</h1>

<h3>Created Events</h3>
<ul>
	<% @user.events.each do |event| %>
		<li><%= link_to event.title, event %> @ <%= event.location %></li>
	<% end %>
</ul>

<h3>Upcoming Events</h3>
<ul>
	<% @user.upcoming_events.each do |event| %>
		<li><%= link_to event.title, event %> @ <%= event.location %></li>
	<% end %>
</ul>


<h3>Past Events</h3>
<ul>
	<% @user.previous_events.each do |event| %>
		<li><%= link_to event.title, event %> @ <%= event.location %></li>
	<% end %>
</ul>